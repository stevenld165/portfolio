---
import Footer from '@/components/layout/footer.vue';
import Nav from '@/components/layout/nav.vue';
import '../styles/global.css';
import '../styles/main.css';
import ProjectPage from '@/components/projects/projectPage.vue';

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>steven's portfolio</title>
	</head>
	<Nav page="projects"/>
	<body class="flex flex-col w-full min-h-screen justify-between">
		<div class="px-4 md:px-64">
			<a href="/projects" class="font-bold text-sm ml-4">back</a>
			<ProjectPage frontmatter={frontmatter} client:load><slot /></ProjectPage>
		</div>
		
	</body>
	<Footer client:visible/>
</html>

<style lang="scss">
	@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');
	
	html,
	body {
		width: 100%;
		height: 100%;
		font-family: "Space Grotesk", sans-serif;
  	font-optical-sizing: auto;
	}


</style>
